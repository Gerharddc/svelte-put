{
  "include": ["src/**/*.ts", "rollup.config.ts"],
  "extends": "@svelte-put/tsconfig/base.package.json",
  "compilerOptions": {
    "lib": ["esnext", "DOM"],
    "isolatedModules": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "module": "ESNext",
    "target": "es6",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "declarationDir": "./dist"
  }
}
