{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "include": ["./src/**/*.ts"],
  "compilerOptions": {
    "lib": ["esnext", "DOM"],
    "isolatedModules": true,
    "module": "esnext",
    "target": "es5",
    "sourceMap": true,
    "outDir": "./lib",
    "declaration": true,
    "declarationDir": "./lib",
    "declarationMap": true
  }
}
